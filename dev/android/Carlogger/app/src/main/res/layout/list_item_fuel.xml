<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ListItemLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TV_ListItemFuelCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Cost"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_ListItemFuelAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Amount"
            android:layout_toStartOf="@+id/IV_FuelIC"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_ListItemFuelDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_ListItemFuelAmount"

            android:text="DateTime" />

        <ImageView
            android:id="@+id/IV_FuelIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_fuel"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ListItemLLHo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/TV_ListItemFuelCostPerLitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost/Litre" />

    <TextView
        android:id="@+id/TV_ListItemFuelKM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KM" />

    <LinearLayout
        android:id="@+id/ListItemLLHo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_ListItemFuelFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Full:" />

        <TextView
            android:id="@+id/TV_ListItemFuelAutoEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AutoEntry:" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ListItemLLHo3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BTN_FuelEdit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/BTN_FuelDelete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/fui_bgEmail" />
    </LinearLayout>

</LinearLayout>