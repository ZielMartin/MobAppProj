<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListItemLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ListItemLLHo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_ListItemRepairType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_ListItemRepairCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cost"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV_ListItemRepairDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DateTime" />

    <TextView
        android:id="@+id/TV_ListItemRepairLaborCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LaborCost" />

    <TextView
        android:id="@+id/TV_ListItemRepairPartCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PartCost" />

    <TextView
        android:id="@+id/TV_ListItemRepairDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <TextView
        android:id="@+id/TV_ListItemRepairAutoEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AutoEntry" />


    <ImageView
        android:id="@+id/IV_ListItemRepairBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:id="@+id/ListItemLLHo3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BTN_RepairEdit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/BTN_RepairDelete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/fui_bgEmail" />
    </LinearLayout>

</LinearLayout>