<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ListItemLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ListItemRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TV_ListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/TV_ListItemFuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_ListItemName"
            android:text="TextView"
            tools:text="kraftstoff" />

        <TextView
            android:id="@+id/TV_ListItemPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TV_ListItemFuel"
            android:layout_alignBottom="@+id/TV_ListItemFuel"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            tools:text="leistung" />

        <TextView
            android:id="@+id/TV_ListItemcm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TV_ListItemPower"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="TextView"
            tools:text="hubraum" />

        <TextView
            android:id="@+id/TV_ListItemProductionYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_ListItemFuel"
            android:text="TextView"
            tools:text="baujahre" />

        <TextView
            android:id="@+id/TV_ListItemHsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TV_ListItemPower"
            android:layout_below="@+id/TV_ListItemPower"
            android:text="TextView"
            tools:text="hsn" />

        <TextView
            android:id="@+id/TV_ListItemTsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TV_ListItemcm3"
            android:layout_below="@+id/TV_ListItemcm3"
            android:text="TextView"
            tools:text="tsn" />

    </RelativeLayout>

</LinearLayout>